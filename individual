#!/usr/bin/env python3
# -*- coding: utf-8 -*-

if __name__ == '__main__':
    # Ввести кортеж одной строкой.
    A = tuple(map(int, input("Введите кортеж чисел через пробел: ").split()))

    # Определяем количество элементов, равных первому
    count = A.count(A[0])

    # Выводим все элементы, следующие после последнего элемента, равного первому

    if count == len(A):
        print("Весь кортеж заполнен одинаковыми элементами.")
    else:
        print("Количество элементов, равных первому:", count)
        print("Элементы, следующие за последним элементом, равным первому:", A[count+1:])
